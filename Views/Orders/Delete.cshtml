@model ClientOrderApp.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>
<h3>Are you sure you want to delete this order?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.Client.Name</dd>
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product.Title</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@(Model.Quantity * Model.Product.Price)</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>